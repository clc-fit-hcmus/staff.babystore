<div class="content-body">
    <div class="container-fluid">
        <div class="row page-titles mx-0">
            <div class="col-sm-6 p-md-0">
                <div class="welcome-text">
                    <h4>Hi, welcome back!</h4>
                    <span>Datatable</span>
                </div>
            </div>
            <div class="col-sm-6 p-md-0 justify-content-sm-end mt-2 mt-sm-0 d-flex">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="javascript:void(0)">Lịch Sử</a></li>
                    <li class="breadcrumb-item active"><a href="javascript:void(0)">Lương</a></li>
                </ol>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Staffs</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="example" class="display" style="min-width: 845px">
                                <thead>
                                <tr>
                                    <th>ID nhân viên</th>
                                    <th>Họ tên</th>
                                    <th>Ngày nhận</th>
                                    <th>Lương</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each history}}
                                <tr>
                                    <td>{{this.id_nhanvien}}</td>
                                    <td>{{this.hoten}}</td>
                                    <td>{{dateFormat this.ngaynhanluong format="ddd, MMM dd yyyy"}}</td>
                                    <td>{{price this.luongnhan}}</td>
                                </tr>
                                {{/each}}
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>ID nhân viên</th>
                                    <th>Họ tên</th>
                                    <th>Ngày nhận</th>
                                    <th>Lương</th>
                                </tr>
                            </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
